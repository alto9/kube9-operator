{
  "name": "kube9-operator",
  "version": "1.0.1",
  "type": "module",
  "description": "Kubernetes Operator for the kube9 VS Code Extension",
  "main": "dist/index.js",
  "bin": {
    "kube9-operator": "dist/index.js"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "SERVER_URL=${SERVER_URL:-https://api.kube9.io} LOG_LEVEL=${LOG_LEVEL:-info} tsx src/index.ts",
    "dev:watch": "SERVER_URL=${SERVER_URL:-https://api.kube9.io} LOG_LEVEL=${LOG_LEVEL:-info} nodemon --exec tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --config vitest.config.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "docker:build": "docker build -t kube9-operator:local .",
    "docker:load:minikube": "npm run docker:build && minikube image load kube9-operator:local",
    "deploy:minikube": "./scripts/deploy-minikube.sh",
    "test:minikube": "echo 'Run integration tests against minikube cluster' && exit 1",
    "clean:minikube": "helm uninstall kube9-operator --namespace kube9-system 2>/dev/null || true",
    "release": "semantic-release"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "better-sqlite3": "^9.6.0",
    "commander": "^12.1.0",
    "express": "^4.18.2",
    "js-yaml": "^4.1.1",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@vitest/ui": "^4.0.14",
    "nodemon": "^3.0.2",
    "semantic-release": "^25.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.14"
  },
  "keywords": [
    "kubernetes",
    "operator",
    "kube9"
  ],
  "license": "MIT"
}
